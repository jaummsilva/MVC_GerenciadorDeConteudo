@{
    ViewBag.Title = "Paginas";
    List<Business.Pagina> paginas = ViewBag.Paginas;
}

@if (TempData["sucesso"] != null)
{
    <div class="alert alert-success" @TempData["sucesso"]></div>
}

@if (TempData["erro"] != null)
{
    <div class="alert alert-danger" @TempData["erro"]></div> 
}
<div class="jumbotron">
    <h2>Paginas</h2>
    <table class="table table-bordered">
        <tr>
            <td> ID </td>
            <td> Nome </td>
            <td> Data </td>
            <td> Render - Conteudo</td>
            <td></td>


        </tr>
        @foreach (var p in paginas)
        {
            <tr>
                <td>@p.Id </td>
                <td>@p.Nome </td>
                <td>@p.Data  </td>
                <td>
                    <a href="/paginas/@p.Id/previsao" target="_blank" class="btn btn-warning">Previsão</a>
                </td>
                <td>
                    <a href="/paginas/@p.Id/editar" class="btn btn-primary">Alterar</a>
                    <a href="/paginas/@p.Id/deletar" class="btn btn-danger" onclick="ValidaExclusão(@p.Id, event)">Excluir</a>
                </td>
            </tr>

        }
    </table>
    <br />
    <div>
        <a href="/paginas/cadastro" class="btn btn-info"> Cadastrar </a>
    </div>
</div>
